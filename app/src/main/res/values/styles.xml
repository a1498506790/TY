<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Activity 跳转动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="activityAnim">
        <!--用于设置打开新的Activity并进入新的Activity展示的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <!--用于设置打开新的Activity并销毁之前的Activity展示的动画-->
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <!--用于设置关闭当前Activity进入上一个Activity展示的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <!--用于设置关闭当前Activity时展示的动画-->
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Splash主题 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Toolbar 长按弹出Popup主题 -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--分割线样式-->
    <style name="Divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divide_height</item>
    </style>

    <style name="Divide.Default">
        <item name="android:background">@color/colorDivide</item>
    </style>

    <style name="Divide.Default.Margin">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <!--按钮样式-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>
    <style name="Button.Default">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:background">@drawable/bg_button_default</item>
    </style>
    <style name="Button.Default.Margin">
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
    <style name="Button.Default.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <!--文字样式-->
    <style name="Text">
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Text.Black">
        <item name="android:textColor">@color/textBlack</item>
    </style>
    <style name="Text.White">
        <item name="android:textColor">@color/textWhite</item>
    </style>
    <style name="Text.Brown">
        <item name="android:textColor">@color/textBrown</item>
    </style>
    <style name="Text.Maple">
        <item name="android:textColor">@color/textMaple</item>
    </style>
    <style name="Text.Red">
        <item name="android:textColor">@color/textRed</item>
    </style>
    <style name="Text.Gray">
        <item name="android:textColor">@color/textGray</item>
    </style>
    <style name="Text.Grayish">
        <item name="android:textColor">@color/textGrayish</item>
    </style>

    <!--输入框样式-->
    <style name="EditText">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorHint">@color/textGrayish</item>
    </style>

</resources>
